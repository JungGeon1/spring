<!-- 게시글등록 -->
<select id="selectIdChk" resultType="com.test.nb.domain.NbMemberDto">
	select * from noticetest.noticeBoardMember where nbm_id=#{param};
</select>
<insert id="insertNbMember" parameterType="com.test.nb.domain.NbMemberDto">
	insert into noticetest.noticeBoardMember(nbm_name,nbm_id,nbm_pw,nbm_address,nbm_code)values(#{nbm_name},#{nbm_id},#{nbm_pw},#{nbm_address},#{nbm_code});
</insert>

<update id="verify">
		update noticetest.noticeBoardMember set nbm_verify ='Y' where nbm_id=#{param1} and nbm_code=#{param2}
	</update>
	
<delete id="deleteMember">
	delete from noticetest.noticeBoardMember where nbm_idx=#{param};
</delete>
